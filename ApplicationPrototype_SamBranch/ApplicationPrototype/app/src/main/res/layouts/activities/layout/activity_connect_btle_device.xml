<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ConnectBTLEDeviceActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_vertical_height"
            android:background="@color/themeBGAlternate">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_content"
        android:layout_marginTop="@dimen/action_bar_vertical_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/bt_device_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="BT Device Name"
            android:textColor="@color/DarkBlueGray"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/functionallity_limnitation_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Note: This application will only work with PHP Controller Devices."
            android:textColor="@color/lightBlueGray"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <ListView
            android:id="@+id/bt_device_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_scan_button"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scanning_progress_bar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_action_scan"
            android:text="Scan For Devices"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            android:onClick="onScan"
            app:elevation = "15dp"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

