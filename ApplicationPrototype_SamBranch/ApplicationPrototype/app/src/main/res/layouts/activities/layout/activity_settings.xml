<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SettingsActivity">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/LL_0">
                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/app_main_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/action_bar_vertical_height"
                        android:background="@color/themeBGAlternate">

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LL_0"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/LL_1">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toggle_bt_enable_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_bluetooth"
                android:textColor="@color/DarkBlueGray"
                app:useMaterialThemeColors="true"
                android:textSize="18sp"
                android:gravity="left|center"
                android:textOn="Bluetooth Enabled"
                android:textOff="@string/enable_bluetooth"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_2"
            android:layout_below="@id/LL_1"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Scan duration"
                android:textColor="@color/DarkBlueGray"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>
<!--            <Space android:layout_width="60dp"-->
<!--               android:layout_height="wrap_content"/>-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:id="@+id/scanDurationInput">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:backgroundTint="@color/white"
                    android:hint="Duration"
                    android:textColorHint="@color/teal_700"
                    android:inputType="number"
                    android:gravity="right"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_3"
        android:layout_below="@id/LL_2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/saveDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:backgroundTint="@color/DarkBlueGray"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:onClick="saveData"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL_3"
        android:id="@+id/LL_4"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Current Scan Duration: "
            android:textColor="@color/DarkBlueGray"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentScanDuration"
            android:textColor="@color/DarkGray"
            android:text="0 ms"
            android:textSize="17sp"
            android:gravity="right"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            />
    </LinearLayout>



</RelativeLayout>