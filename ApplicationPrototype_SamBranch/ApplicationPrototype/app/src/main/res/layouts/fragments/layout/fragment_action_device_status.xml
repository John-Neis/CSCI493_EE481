    <RelativeLayout
        android:id="@+id/RL_device_gatt_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL_device_status"
        android:layout_marginBottom="@dimen/action_bar_vertical_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="invisible">
        <TextView
            android:id="@+id/services_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services:"
            android:textSize="16sp"
            android:textColor="@color/DarkBlueGray"/>
        <TextView
            android:id="@+id/php_control_service_label"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/services_label_tv"
            android:text="PHP Device Control Service"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/characteristics_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/php_control_service_label"
            android:text="Characteristics:"
            android:textSize="16sp"
            android:textColor="@color/DarkBlueGray"/>
        <TextView
            android:id="@+id/php_write_characteristic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/characteristics_label_tv"
            android:layout_marginLeft="8dp"
            android:text="PHP Write Characteristic"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/php_read_characteristic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/php_write_characteristic"
            android:layout_marginLeft="8dp"
            android:text="PHP Read Characteristic"
            android:textSize="14sp"/>
        <Space
            android:id="@+id/space"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:layout_below="@id/php_read_characteristic"/>
        <TextView
            android:id="@+id/command_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space"
            android:text="Text Command"
            android:textSize="16sp"
            android:textColor="@color/DarkBlueGray"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/command_prompt"
            android:background="@color/white"
            android:id="@+id/command_input"
            app:counterEnabled="true"
            app:counterMaxLength="256">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Enter Text to Send to the Device"
                android:textColorHint="@color/teal_700"
                android:textSize="12sp"
                android:inputType="text"
                android:gravity="start|bottom"
                android:maxLines="20"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/send_command_btn"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/command_input"
            android:text="Send Command"
            android:backgroundTint="@color/teal_700"/>
    </RelativeLayout>

</RelativeLayout>