<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluetooth.php">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name = "android.hardware.location"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_php"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bluetooth.php.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bluetooth.php.ui.device_control.ConnectBTLEDeviceActivity">
    </activity>
        <activity
            android:name=".ui.device_control.DeviceActionsActivity"
            android:label="Device Control"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".util.SettingsActivity">
        </activity>
        <service
            android:name="com.bluetooth.php.bluetooth.BleAdapterService"
            android:enabled="true">
        </service>

    </application>

</manifest>